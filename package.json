{
  "name": "cipowell-svelte",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "test:storybook": "test-storybook --stories-json",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@playwright/test": "^1.28.1",
    "@storybook/addon-a11y": "^8.6.8",
    "@storybook/addon-essentials": "^8.6.8",
    "@storybook/addon-interactions": "^8.6.8",
    "@storybook/addon-links": "^8.6.8",
    "@storybook/blocks": "^8.6.8",
    "@storybook/sveltekit": "^8.6.8",
    "@storybook/test": "^8.6.8",
    "@storybook/test-runner": "^0.22.0",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/adapter-cloudflare": "^7.0.3",
    "@sveltejs/kit": "^2.5.27",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/svelte": "^5.2.1",
    "@types/eslint": "^9.6.0",
    "@vitest/ui": "^3.1.3",
    "axe-playwright": "^2.0.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-svelte": "^2.45.1",
    "globals": "^16.1.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.2.6",
    "remark-gfm": "^4.0.1",
    "storybook": "^8.3.0",
    "svelte": "^5.37.3",
    "svelte-check": "^4.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "type": "module",
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^17.0.0",
    "contentful": "^11.7.6"
  }
}
