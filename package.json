{
	"name": "cipowell-svelte",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest --project=unit",
		"test:storybook": "vitest --project=storybook",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^5.0.0",
		"@playwright/test": "^1.58.1",
		"@storybook/addon-a11y": "^10.2.4",
		"@storybook/addon-docs": "^10.2.4",
		"@storybook/addon-links": "^10.2.4",
		"@storybook/sveltekit": "^10.2.4",
		"@storybook/addon-svelte-csf": "^5.0.10",
		"@storybook/addon-vitest": "^10.2.4",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.6",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@types/eslint": "^9.6.0",
		"@vitest/ui": "^4.0.18",
		"axe-playwright": "^2.0.2",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-storybook": "^10.2.4",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"jsdom": "^28.0.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"remark-gfm": "^4.0.1",
		"storybook": "^10.1.10",
		"svelte": "^5.49.1",
		"svelte-check": "^4.3.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"playwright": "^1.58.0",
		"@vitest/browser-playwright": "4.0.18",
		"@vitest/coverage-v8": "4.0.18"
	},
	"type": "module",
	"eslintConfig": {
		"extends": [
			"plugin:storybook/recommended"
		]
	},
	"dependencies": {
		"@contentful/rich-text-html-renderer": "^17.1.6",
		"contentful": "^11.10.3"
	}
}
}
